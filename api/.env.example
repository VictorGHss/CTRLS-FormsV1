# ==============================================================================
# CTRLS-Forms API - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# GCP Configuration
PROJECT_ID=ctrls-forms-api
REGION=southamerica-east1

# Database Credentials
DB_PASSWORD=your_database_password_here
DB_USER=docker
DB_NAME=clinical_forms
DB_INSTANCE_NAME=ctrls-postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600000

# Jasypt Encryption
JASYPT_PASSWORD=your_jasypt_password_here

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Integrations
CLOUDINARY_URL=cloudinary://your_cloudinary_url_here
BREVO_API_KEY=your_brevo_api_key_here
FEEGOW_BASE_URL=https://api.feegow.com/v1/api

# Infrastructure
REDIS_INSTANCE_NAME=ctrls-redis
VPC_CONNECTOR_NAME=ctrls-connector
ARTIFACT_REPO=ctrls-repo
SERVICE_NAME=ctrls-forms-api

